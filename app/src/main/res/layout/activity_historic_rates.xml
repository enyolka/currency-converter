<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoricRatesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/currencySign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="PLN" />

            <TextView
                android:id="@+id/todayRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/todayRateText" />

            <TextView
                android:id="@+id/yesterdayRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20sp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/yesterdayRateText" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historicRatesChartWeek"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_marginTop="30sp"
                android:layout_weight="1" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historicRatesChartMonth"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:layout_marginTop="30sp"
                android:layout_weight="1">

            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>